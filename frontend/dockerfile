FROM node:18

# Install native build tools for packages like lightningcss
RUN apt-get update && apt-get install -y \
  python3 \
  make \
  g++ \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

# âœ… Build the Next.js app
RUN npm run build

EXPOSE 3000
CMD ["npm", "start"]
